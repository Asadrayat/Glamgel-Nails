<style>
  .collection-single-card__wrapper .pd-add-to-card{
    width: 100%;
    height: auto;
    /* border-radius: var(--Line-Height-Heading-H4, 40px); */
    border: 0;
    background: #F6F;
    padding: 16px 40px;
    color: #FFF;
    font-family: Satoshi;
    font-size: 20px;
    font-style: normal;
    font-weight: 700;
    line-height: 24px;
    letter-spacing: -0.4px;
    color: #fff;
    cursor: pointer;
    @media(max-width:768px){
      font-size: 14px;
      line-height: 16px;
      padding: unset;
      padding-block: 10px;
    }
  }
  .pd-form-wrapper .shopify-installments {
     /* margin-top: 0;
     margin-bottom: 20px;
     text-align: center;
     line-height: 130%;
     cursor: pointer;
     font-size: 14px;
     color: #000; */
     }
  .collection-single-card__wrapper .pd-form-wrapper {
    position: absolute;
    bottom: 0;
    width: 100%;
    height: auto;
    visibility: hidden;
    z-index: 2;
    @media(max-width: 768px){
      /* position: unset; */
      visibility: visible;
    }
  }
</style>
<div
  class="
    single-card-wrapper collection-single-card__wrapper
    {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}
  "
  {% if settings.animations_reveal_on_scroll %}
    data-cascade
    style="--animation-order: {{ forloop.index }};"
  {% endif %}
>
  <div class="product-image-wrapper {% if product.media.size > 1 %}is--second-image{% endif %}">
    <div class="tt-wishlist-plp-btn-main" data-pid="{{ product.id }}" data-handle="{{ product.handle }}"></div>
    <div class="maze-badge-wrapper hidden" data-pid="{{ product.id }}" data-handle="{{ product.handle }}">
      <a href="javascript:void(0)" class="header__icon h-wishlist-icon wishlist-page-widget">
        {% render 'maze-icons', name: 'heart' %}
        {% comment %}<span class="wishlist-h-count wishlist-total-count" data-total="0">0</span>{% endcomment %}
      </a>
    </div>
    <a class="absolute-link" href="{{ product.url }}"> </a>
    {{- product.featured_image | image_url: width: 400 | image_tag: class: 'first--image' -}}
    {% if product.media.size > 1 %}
      {{ product.media[1] | image_url: width: 400 | image_tag: class: 'second--image' }}
    {% endif %}
    <div class="pd-form-wrapper">
      {% form 'product', product, id: formId %}
        {% comment %}
          Automatically inserted by Shop Pay Installments theme updater
        {% endcomment %}
        <div class="hidden">
          {% unless settings.disable_autogenerated_payment_terms %}
            {{ form | payment_terms }}
          {% endunless %}
        </div>
        <div class="pd-current-variant-id">
          <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
        </div>
        <input type="hidden" name="quantity" value="1">
        <div class="pd-atc-button-wrapper">
          <button
            title="Add To Cart - {{ product.title }}-{{ product.selected_or_first_available_variant.price | money }}"
            aria-label="Add to Cart"
            type="submit"
            class="
              pd-add-to-card product-quick-add product-form__submit {% unless product.selected_or_first_available_variant.available %}
                hidden
              {% endunless %}
            "
            {% unless product.selected_or_first_available_variant.available %}
              disabled
            {% endunless %}
          >
            {% if product.selected_or_first_available_variant.available %}
              {% if product.metafields.custom.bundle_exclusion -%}
                {{- 'Add to Cart' | escape -}}
              {%- else -%}
                {{- 'Add to Bundle' | escape -}}
              {%- endif %}
              <span>{{ cart.currency.symbol }}</span>
              {{- product.selected_or_first_available_variant.price | money_without_currency }}
            {% else %}
              SOLD OUT <span>{{ cart.currency.symbol }}</span>
              {{- product.selected_or_first_available_variant.price | money_without_currency }}
            {% endif %}
          </button>
          <button
            type="button"
            class="
              notify-stock-button-x product --product--card-- {% if product.selected_or_first_available_variant.available %}
                hidden
              {% endif %}
            "
            data-title="{{ product.title }}"
            data-variant="{{ product.selected_or_first_available_variant.id }}"
          >
            {{ settings.card_button_label | default: 'Notify Me' }}
          </button>
        </div>
      {% endform %}
    </div>
  </div>
  <div class="card-product-info">
    <a href="{{ product.url }}">{{ product.title }} </a>
  </div>
</div>

{% assign id = section.id %}
<style>
   .section-container--{{ section.id }}{
     margin-top: {{ section.settings.margin_top | append:'px' }};
     margin-bottom: {{ section.settings.margin_bottom | append:'px' }};
     padding-top: {{ section.settings.padding_top | append:'px' }};
     padding-bottom: {{ section.settings.padding_bottom | append:'px' }};
     overflow: hidden;
     background: #FFEBFF;
     @media(max-width: 1512px){
       height: calc(100vh - 220px);
       padding-top: 20px;
     }
   }
   .container-{{ id }} {
     display: grid;
     grid-template-columns: 1fr 1fr;
     /* justify-items: center; */
     height: 100%;
   }
   .info-{{ id }}{
     display: flex;
     flex-direction: column;
     justify-content: center;
   }
   .container-{{ id }} p{
     color: #262626;
     font-family: Satoshi;
     font-size: 20px;
     font-style: normal;
     font-weight: 500;
     line-height: 20px; /* 100% */
     text-transform: uppercase;
     margin: 0;
   }
   .container-{{ id }} h2{
     color: #000;
     font-family: Minakoe;
     font-size: 56px;
     font-style: normal;
     font-weight: 400;
     line-height: 60px;
     letter-spacing: -1.12px;
     margin: 10px 0 24px 0;
   }
   .container-{{ id }} a{
     color: #FFF;
     font-family: Satoshi;
     font-size: 20px;
     font-style: normal;
     font-weight: 700;
     line-height: 24px;
     letter-spacing: 0.4px;
     text-decoration: none;
     display: flex;
     padding: 16px 40px;
     justify-content: center;
     align-items: center;
     gap: 8px;
     border-radius: 40px;
     border: 1px solid #FECDFE;
     background: #F6F;
     width: max-content;
   }
   .image-wrapper-{{ id }}{
      max-width: 555px;
      display: flex;
      justify-content: flex-end;
      justify-self: center;
      align-items: flex-end;
     @media(max-width: 1520px){
        max-width: 450px;
     }
     @media(max-width: 1440px){
        max-width: 380px;
     }
     @media(max-width: 1400px){
        max-width: 350px;
     }
   }
   .image-wrapper-{{ id }} img{
     width: 80%;
     height: auto;
     object-fit: contain;
     @media(max-width: 1512px){
       /* max-height: 75vh; */
     }
   }

   @media screen and (max-width: 768px){
     .section-container--{{ section.id }}{
       margin-top: {{ section.settings.margin_top_mobile | append:'px' }};
       margin-bottom: {{ section.settings.margin_bottom_mobile | append:'px'  }};
       padding-top: {{ section.settings.padding_top_mobile | append:'px' }};
       padding-bottom: {{ section.settings.padding_bottom_mobile | append:'px' }};
     }
     .image-wrapper-{{ id }}{
       justify-content: center;
     }
     .container-{{ id }} {
       grid-template-columns: 1fr;
     }
     .container-{{ id }} p{
        color: #262626;
        font-family: Satoshi;
        font-size: 16px;
        font-style: normal;
        font-weight: 500;
        line-height: 20px; /* 125% */
     }
     .container-{{ id }} h2{
        color: #000;
        max-width: 96%;
        font-family: Minakoe;
        font-size: 36px;
        font-style: normal;
        font-weight: 400;
        line-height: 40px; /* 111.111% */
     }
     .container-{{ id }} a{
        display: flex;
        padding: 16px 40px;
        justify-content: center;
        align-items: center;
        gap: 8px;
        align-self: stretch;
        width: 100%;
        color: #FFF;
        font-family: Satoshi;
        font-size: 20px;
        font-style: normal;
        font-weight: 500;
        line-height: 24px;
        letter-spacing: -0.4px;
     }
  }
</style>
<section class="section-container--{{ id }}">
  <div class="container-{{ id }} page-width">
    <div class="info-{{ id }}">
      <p>{{ section.settings.subtitle }}</p>
      <h2>{{ section.settings.title }}</h2>
      <a href="{{ section.settings.url }}">{{ section.settings['btn-text'] }}</a>
    </div>
    <div class="image-wrapper-{{ id }}">
      {% if section.settings.img %}
        {{ section.settings.img | image_url: width: section.settings.img.width | image_tag }}
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Custom home banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "img",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle"
    },
    {

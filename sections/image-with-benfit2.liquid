{% assign id = section.id %}
<style>
      .section-container--{{ section.id }}{
        margin-top: {{ section.settings.margin_top | append:'px' }};
        margin-bottom: {{ section.settings.margin_bottom | append:'px' }};
        padding-top: {{ section.settings.padding_top | append:'px' }};
        padding-bottom: {{ section.settings.padding_bottom | append:'px' }};
        /* overflow: hidden; */
        /* background: #FFEBFF; */
      }
      .title-wrapper h2{
        color: var(--Content-Base-primary, #111827);
        text-align: center;
        /* H2/Desktop */
        /* font-family: Minakoe; */
        font-size: 42px;
        font-style: normal;
        font-weight: 400;
        line-height: 46px; /* 109.524% */
        letter-spacing: -1.26px;
        text-transform: capitalize;
        margin: 0 0 64px 0;
        @media(max-width: 768px){
          font-size: 32px;
          margin: 0 0 32px 0;
        }
      }
      .desktop-only {
        display: block;
      }
      .mobile-only {
        display: none;
      }
      .container-{{ id }}{
        display: grid;
        grid-template-columns: 2fr 1fr;
        align-items: center;
        user-select: none;
        @media(max-width: 768px){
          grid-template-columns: 1fr;
        }
       .block-wrapper{
          padding: 24px;
          margin: 0;
         @media(max-width: 768px){
           padding: 12px;
         }
          h5{
            color: var(--Content-Base-secondary, #374151);
            font-family: Minakoe;
            font-size: 28px;
            font-style: normal;
            font-weight: 400;
            line-height: 32px;
            margin-block: 16px;
            @media(max-width: 768px){
              font-size: 20px;
              margin-block: 8px;
            }
          }
          p{
            color: var(--Content-Base-base, #4B5563);
            font-family: Satoshi;
            font-size: 16px;
            font-style: normal;
            font-weight: 400;
            line-height: 24px;
            margin: 0;
            color: #000;
            @media(max-width: 768px){
              color: var(--Content-Base-base, #4B5563);
              font-family: Satoshi;
              font-size: 13px;
              font-style: normal;
              font-weight: 400;
              line-height: 16px; /* 123.077% */
            }
          }
        }
       .text-warpper{
         padding: 24px;
         margin: 0 0 15px 0;
         /* border-left: 4px solid #F6F; */
         @media(max-width: 768px){
           padding: 16px;
         }
         h4{
          user-select: none;
          cursor: pointer;
          color: var(--Content-Base-secondary, #374151);
          font-family: Minakoe;
          font-size: 28px;
          font-style: normal;
          font-weight: 400;
          line-height: 32px; /* 114.286% */
          /* padding-top: 32px; */
           margin: 0;
          @media(max-width: 768px){
            color: var(--Content-Base-secondary, #374151);
            font-family: Minakoe;
            font-size: 20px;
            font-style: normal;
            font-weight: 400;
            line-height: 24px; /* 120% */
            padding-top: 16px;
          }
           p{
            color: var(--Content-Base-base, #4B5563);
            font-family: Satoshi;
            font-size: 16px;
            font-style: normal;
            font-weight: 400;
            line-height: 24px;
            margin: 0;
            color: #000;
            @media(max-width: 768px){
              color: var(--Content-Base-base, #4B5563);
              font-family: Satoshi;
              font-size: 13px;
              font-style: normal;
              font-weight: 400;
              line-height: 16px; /* 123.077% */
            }
         }
       }
      }
      .img-wrapper-{{ id }}{
        justify-self: end;;
        @media(max-width: 768px){
          position: unset;
          display: flex;
          flex-direction: column-reverse;
          gap: 32px;
        }
        img.firstimg{
          max-width: 344px;
          width: 100%;
          height: auto;
          object-fit: cover;
          @media(max-width: 768px){
            width: 100%;
          }
        }
        img.secondimg{
          position: absolute;
          height: 100%;
          left: 50%;
          top: 0;
          transform: translate(-80px, 0px);
          width: 60%;
          object-fit: cover;
          @media(max-width: 768px){
            position: unset;
            transform: translate(0);
            width: 70%;
            object-fit: cover;
            height: auto;
            margin: auto;
          }
        }
      }
  /* js for dropdown */
      .block-wrapper{
        border: 0;
      }
      #iwb-desc{
        display: none;
      }
      .block-wrapper.accordion__active-faq #iwb-desc{
        display: block;
      }
      .block-wrapper.accordion__active-faq {
        border-left: 4px solid #F6F;
        margin: 0 0 15px 0;
      }
    @media screen and (max-width: 768px){
      .section-container--{{ section.id }}{
        margin-top: {{ section.settings.margin_top_mobile | append:'px' }};
        margin-bottom: {{ section.settings.margin_bottom_mobile | append:'px'  }};
        padding-top: {{ section.settings.padding_top_mobile | append:'px' }};
        padding-bottom: {{ section.settings.padding_bottom_mobile | append:'px' }};
      }
      .desktop-only {
        display: none;
      }
      .mobile-only {
        display: block;
      }
     }
</style>
<section class="section-container--{{ id }}">
  <div class="title-wrapper">
    <h2>{{ section.settings.title }}</h2>
  </div>
  <div class="container-{{ id }} page-width">
    <div class="info-{{ id }}">
      <div class="text-warpper">
        {% for block in section.blocks %}
          <div class="block-wrapper">
            <h4 id="iwb-title">{{ block.settings.title }}</h4>
            <p id="iwb-desc">{{ block.settings.subtitle }}</p>
          </div>
        {% endfor %}
      </div>
    </div>
    <div class="img-wrapper-{{ id }}">
      {% if section.settings.firstimg %}
        {{
          section.settings.firstimg
          | image_url: width: section.settings.firstimg.width
          | image_tag: class: 'firstimg desktop-only'
        }}
      {% endif %}
      {% if section.settings.secondimg %}
        {{
          section.settings.secondimg
          | image_url: width: section.settings.secondimg.width
          | image_tag: class: 'secondimg desktop-only'
        }}
      {% endif %}
      {% if section.settings.secondimg_m %}
        {{
          section.settings.secondimg_m
          | image_url: width: section.settings.secondimg_m.width
          | image_tag: class: 'secondimg mobile-only'
        }}
      {% endif %}
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', function(event) {

    var accordionsFaq = document.querySelectorAll(".block-wrapper");
    accordionsFaq.forEach(ac => console.log("height: ", ac.clientHeight))

    var openAccordionFaq = (accordion) => {
    	var content = accordion.querySelector("#iwb-desc");
    	accordion.classList.add("accordion__active-faq");
    	content.style.maxHeight = content.scrollHeight + 100 + "px";
    };

    var closeAccordionFaq = (accordion) => {
    	var content = accordion.querySelector("#iwb-desc");
    	accordion.classList.remove("accordion__active-faq");
    	content.style.maxHeight = null;
    };

    accordionsFaq.forEach((accordion) => {
    	var intro = accordion.querySelector("#iwb-title");
    	var content = accordion.querySelector("#iwb-desc");

    	intro.onclick = () => {
    		if (content.style.maxHeight) {
    			closeAccordionFaq(accordion);
    		} else {
    			accordionsFaq.forEach((accordion) => closeAccordionFaq(accordion));
    			openAccordionFaq(accordion);
    		}
    	};
    });
    if (accordionsFaq.length > 0) {
      openAccordionFaq(accordionsFaq[0]);
    }
  });
</script>


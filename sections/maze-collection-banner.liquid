<style>
    .section-container--{{ section.id }}{
      margin-top: {{ section.settings.margin_top | append:'px' }};
      margin-bottom: {{ section.settings.margin_bottom | append:'px' }};
      padding-top: {{ section.settings.padding_top | append:'px' }};
      padding-bottom: {{ section.settings.padding_bottom | append:'px' }};
      overflow: hidden;
      background-color: {{ section.settings.bg-color }};
    }
  .section-wrapper--{{ section.id }} {
    h1, h4, p {
        margin-block: 0;
    }
    .collection-intro {
      text-align: center;
      margin-bottom: 20px;
      @media screen and ( max-width: 768px){
        margin-bottom: 20px;
      }
      h1 {
          color: #000;
          font-size: 56px;
          line-height: 60px;
          letter-spacing: -1.12px;
          margin-bottom: 8px;
          @media screen and ( max-width: 768px){
            font-size: 36px;
            line-height: 44px;
          }
      }
      p {
          color: #374151;
          font-size: 18px;
          line-height: 26px;
          font-weight: 700;
          @media screen and ( max-width: 768px){
            font-size: 14px;
            line-height: 18px;
            max-width: 250px;
            margin: auto;
          }
      }
    }
    .collection-tags {
        display: flex;
        align-items: center;
        gap: 40px;
        justify-content: center;
        flex-wrap: wrap;
        @media screen and (max-width: 768px){
          gap: 16px;
        }
        h4 {
            color: #000;
            font-family: Satoshi;
            font-size: 24px;
            font-weight: 600;
            line-height: 28px;

            @media screen and (max-width: 768px){
              font-size: 20px;
              line-height: 24px;
            }
        }
        .tags {
            display: flex;
            flex-wrap: nowrap;
            gap: 40px;
            overflow-x: auto;
            overflow-y: hidden;
            @media(max-width:768px){
                padding-inline: 10px;
                gap: 10px;
            }
            a {
                /* color: #374151; */
                font-size: 18px;
                line-height: 26px;
                background: #F6F;
                color: #ffff;
                border: 0;
                border-radius: 20px;
                padding: 5px 20px;
                text-decoration: none;
                text-align: center;
                @media screen and (max-width: 768px){
                  font-size: 14px;
                  line-height: 18px;
                  /* width: 100%;
                  height: max-content; */
                }
            }
            a.active-tag {
                /* background-color: #ffffff; */
                 @media screen and (max-width: 768px){
                   min-width: max-content;
                 }
            }
        }
      .tags::-webkit-scrollbar {
        display: none;
      }
    }
    .highlighted_text  h4{
      color: #000;
      font-family: Satoshi;
      font-size: 24px;
      font-weight: 600;
      line-height: 28px;
      text-align: center;
      margin-top: 20px;
      font-style: italic;
      @media screen and (max-width: 768px){
        font-size: 20px;
        line-height: 24px;
      }

    }


  }

    @media screen and (max-width: 768px){
      .section-container--{{ section.id }}{
        margin-top: {{ section.settings.margin_top_mobile | append:'px' }};
        margin-bottom: {{ section.settings.margin_bottom_mobile | append:'px'  }};
        padding-top: {{ section.settings.padding_top_mobile | append:'px' }};
        padding-bottom: {{ section.settings.padding_bottom_mobile | append:'px' }};
      }
      h4.cc_category {
        display: none;
      }
    }
</style>
<section class="section-container--{{ section.id }}">
  <div class="section-wrapper--{{ section.id }}">
    <div class="collection-intro page-width">
      {% if collection.handle == 'all' %}
        <h1 class="">Semi-Cured Gel Nails</h1>
      {% else %}
        <h1 class="">{{ section.settings.title }}</h1>
      {% endif %}

      <p>{{ section.settings.subtitle }}</p>
    </div>
    <div class="collection-tags">
      <h4 class="cc_category">{{ section.settings.collection_label }}</h4>
      <div class="tags">
        {% for block in section.blocks %}
          {% assign collection = block.settings.collection %}
          <a
            class="{% if collection.handle == collection.handle %}active-tag{% endif %}"
            href="{{ collection.url }}"
          >
            {{ collection.title }}
          </a>
        {% endfor %}
      </div>
    </div>
    <div class="highlighted_text">
      <h4>{{ section.settings.highlight }}</h4>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Maze Collection Banner",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "text",
      "id": "highlight",
      "label": "Highlighted Text"
    },
    {
      "type": "text",
      "id": "collection_label",
      "label": "Collection Label",
      "default": "Categories"
    },

    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle"
    },
    {
      "type": "color",
      "id": "bg-color",
      "label": "Background Color",
      "default": "#FFEBFF"
    },
    {
      "type": "header",
      "content": "Desktop Spacing"
    },
    {
      "type": "range",
      "id": "margin_top",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "Margin Top",
      "default": 0
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "Margin Bottom",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "Padding Top",
      "default": 50
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 50
    },
    {
      "type": "header",
      "content": "Mobile Spacing"
    },
    {
      "type": "range",
      "id": "margin_top_mobile",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "Margin Top (Mobile)",
      "default": 0
    },
    {
      "type": "range",
      "id": "margin_bottom_mobile",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "Margin Bottom (Mobile)",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_top_mobile",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "Padding Top  (Mobile)",
      "default": 20
    },
    {
      "type": "range",
      "id": "padding_bottom_mobile",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "Padding Bottom  (Mobile)",
      "default": 0
    }
  ],
  "blocks": [
    {
      "name": "Collection",
      "type": "collection",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection"
        }
      ]
    }
  ],

  "presets": [
    {
      "name": "Maze Collection Banner"
    }
  ]
}
{% endschema %}
